<?php foreach($globalCTAs as $globalCTA): ?>
	<?php if($globalCTA->column == $column): ?> 
	
  <tr class="" data-id="<?php echo e($globalCTA->id); ?>">
      
      <td class="col-sm-4">
        <i class="ti-move handle"></i>
        <input class="on form-control" type="text" value="<?php echo e($globalCTA->text); ?>" name="text-<?php echo e($globalCTA->id); ?>"/>
      </td>
      
      <td class="col-sm-4">
        <input class="on form-control" type="text" value="<?php echo e($globalCTA->url); ?>" name="url-<?php echo e($globalCTA->id); ?>"/>
      </td>
      
      <td class="col-sm-2">
        <div class="form-group form-group-role on">
           <div class="input-group input-group-select">

             <select name="target-<?php echo e($globalCTA->id); ?>" class="form-control">
               <option value="">- Target -</option>
               <?php 
             if ($globalCTA->target == '_self') {
                 $selected = 'selected';
               } else {
                 $selected = '';
               }
               ?>
               <option value="_self" <?php echo e($selected); ?>>_self</option>
               <?php 
             if ($globalCTA->target == '_blank') {
                 $selected = 'selected';
               } else {
                 $selected = '';
               }
               ?>
               <option value="_blank" <?php echo e($selected); ?>>_blank</option>
             </select>
             <input type="hidden" value="<?php echo e($column); ?>-<?php echo e($globalCTA->id); ?>"/>

           </div>
        </div>
      </td>
      
      <td class="col-sm-2 actions">
        <a href="<?php echo e(url('settings/'.$globalCTA->id.'/duplicate?type=cta')); ?>"><i class="fa fa-plus icon-actions pull-left"></i></a> 
        <a class="delete-confirm" data-object="link" href="<?php echo e(url('settings/'.$globalCTA->id.'/delete?type=cta')); ?>"><i class="fa fa-minus icon-actions pull-left"></i></a>
      </td>
      
		</tr>
    
	<?php endif; ?>
<?php endforeach; ?>


