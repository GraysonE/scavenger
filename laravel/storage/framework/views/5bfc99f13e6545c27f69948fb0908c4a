

<div class="in-theaters hover-menu desktop-only" data-list-type="in_theaters">
  <div class="box">
    <ul>
      <?php foreach($movies as $m): ?>
        
        <li data-rd="<?php echo e($m->release_dates); ?>" data-od="<?php echo e($m->official_release); ?>">
          <?php if(!empty($m->images) && !empty($m->images['poster'])): ?>
            <a href="<?php echo e($basepath); ?>/<?php echo e($m->url); ?><?php echo e($server); ?>"><img src="<?php echo e($basepath); ?>/<?php echo e($m->images['poster']); ?>" class="r2x" alt=""/></a>
          <?php endif; ?>
          <a href="<?php echo e($basepath); ?>/<?php echo e($m->url); ?><?php echo e($server); ?>"><h4><?php echo e(strtoupper($m->title)); ?></h4></a>
          <p class="releasedate"></p>
        </li>

      <?php endforeach; ?>
    </ul>
  </div>
  <a href="<?php echo e($basepath); ?>/shared<?php echo e($server); ?>/in-theaters.html" class="wire-btn text"><span>SHOW ALL</span></a>
</div>


