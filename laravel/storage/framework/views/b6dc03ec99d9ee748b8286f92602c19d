<form method="post" action="<?php echo e(url('/users')); ?>" id="main-form">

  <table id="users_table" class="expandable" data-type="users">
    <thead>
      <tr>
        <th class="col-sm-3">Name</th>
        <th class="col-sm-3">Username</th>
        <th class="col-sm-3">Email</th>
        <th class="col-sm-2">Role</th>
        <th class="col-sm-1"></th>
      </tr>
    </thead>
    <tbody>
      <?php foreach($users as $user): ?>
      <tr class="" data-id="<?php echo e($user->id); ?>">
        <td class="col-sm-3">
          <?php echo e(csrf_field()); ?>

          <input class="on form-control" type="text" placeholder="First Name" value="<?php echo e($user->first_name); ?>" name="first_name-<?php echo e($user->id); ?>"/>
          <input class="on form-control" type="text" placeholder="Last Name" value="<?php echo e($user->last_name); ?>" name="last_name-<?php echo e($user->id); ?>"/>
        </td>
        <td class="col-sm-3">
          <input class="on form-control" type="text" placeholder="Username" value="<?php echo e($user->username); ?>" name="username-<?php echo e($user->id); ?>"/>
        </td>
        <td class="col-sm-3">
          <input class="on form-control" type="text" placeholder="Email" value="<?php echo e($user->email); ?>" name="email-<?php echo e($user->id); ?>"/>
        </td>
        <td class="col-sm-2">
          <div class="form-group form-group-role on">
            <div class="input-group input-group-select">
              <select name="role-<?php echo e($user->id); ?>" class="form-control">

                <option value="">- Role -</option>

                <?php
                if ($user->role == 0)
                {
                  $selected = 'selected';
                } else
                {
                  $selected = '';
                }
                ?>

                <option value="0" <?php echo e($selected); ?>>Administrator</option>

                <?php
                if ($user->role == 1)
                {
                  $selected = 'selected';
                } else
                {
                  $selected = '';
                }
                ?>

                <option value="1" <?php echo e($selected); ?>>Editor</option>
              </select>
            </div>
          </div>
        </td>
        <td class="col-sm-1 col-actions">
          <div>
            <!--a href="#"><i class="ti-pencil-alt icon-actions-clear pull-left"></i></a-->
            <a class="delete-confirm" data-object="user" href="<?php echo e(url('auth/register/'.$user->id.'/delete')); ?>"><i class="fa fa-close icon-actions pull-left"></i></a>
          </div>
        </td>
      </tr>
      <?php endforeach; ?>
    </tbody>
  </table>


  <!--div class="form-group">
    <button class="btn btn-success" type="submit">Save Users</button>
  </div-->

</form>